$pos-border = 10px

body
  background-color #f5f7f9

main
  .content
    padding-top 0

.markdown-section h3 // undo template style
  margin inherit

.markdown-section pre
  margin 0
  padding 0

.markdown-section p.tip, .markdown-section pre > code // fixing bg after new body bg
  background-color #ebebeb

.sidebar-nav
  > ul
    margin-left 0
  li
    padding-left 15px

    p:first-child a
      color #364149 // fix css distincting sections with and without link
    
    &.active
      padding-left 10px

  .divider
    width 90%
    height 0
    border 0
    border-top 1px solid #364149

h1 span, h2 span
  font-weight bold

.iframe-wrapper
  width (240px + $pos-border)
  height (320px + $pos-border)
  overflow hidden
  margin 0 auto
  border: $pos-border solid;
  border-radius: 10px; 

  iframe
    height 100%
    // undo template style
    margin 0 
    border 0